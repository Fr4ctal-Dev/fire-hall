<div class="row">
    <div class="col-2"></div>
    <div class="col-8 mt-3">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h1">Add Assignment</h1>
        </div>
        <div class="form">
            <form action="/edit-assignments" method="post">
                <div class="input-group mb-3">
                    <span class="input-group-text">Type</span>
                    <input type="text" placeholder="Flood, Fire, Cat in a tree, ..." class="form-control" id="type_input" name="type">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Address</span>
                    <select class="form-select" id="location-select" name="location">
                        <script>
                            var locations = '<%- JSON.stringify(locations) %>'
                            locations = JSON.parse(locations)
                            for (const locKey in locations) {
                                $('#location-select').append('<option value='+ locations[locKey].lid + '>'+
                                    locations[locKey].street_name + ' ' +
                                    locations[locKey].number + ', ' +
                                    locations[locKey].postcode +
                                    '</option>')
                            }
                        </script>
                    </select>
                    <a class="btn btn-dark" href="/new-location">New</a>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Members</span>
                    <select class="form-select" multiple id="member_select" name="members">
                        <script>
                            var members = '<%- JSON.stringify(members) %>'
                            members = JSON.parse(members)
                            console.log(members)
                            for (const memKey in members) {
                                $('#member_select').append('<option value='+ members[memKey].mid + '>'+
                                    members[memKey].last_name + ' ' +
                                    members[memKey].first_name + ', ' +
                                    members[memKey].task +
                                    '</option>')
                            }
                        </script>
                    </select>
                </div>
                

                <div class="input-group mb-3">
                    <span class="input-group-text">Date</span>

                    <input type="date" placeholder="Date" aria-label="date" class="form-control" id="date_input" name="date">
                </div>

                <div class="mb-3">
                    <label for="description-area" class="form-label">Description (100 char.)</label>
                    <textarea class="form-control" id="description-area" rows="3" name="description"></textarea>
                </div>


                <div class="input-group mb-3">
                    <button class="btn btn-primary btn-block" type="submit">Add</button>
                </div>

            </form>


        </div>
    </div>
    <div class="col-2"></div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.min.js"></script>


